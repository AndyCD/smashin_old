<div class="container-fluid">

  <h2>Edit <%= resource_name.to_s.humanize %> Profile</h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

    <%= devise_error_messages! %>

    <div class="form-inputs">
      <%= f.label :email, required: true %>
      <%= f.input :email, label: false, autofocus: true, :error => false %><br />

      <%= f.label :name, required: true %>
      <%= f.input :name, label: false, :error => false %><br />

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
      <% end %>

      <%= f.label :password, required: false, label: "New Password" %>
      <%= f.input :password, label: false, autocomplete: "off", :error => false %><br />

      <%= f.label :password_confirmation, required: false, label: "New Password Confirmation" %>
      <%= f.input :password_confirmation, label: false, :error => false %><br />

      <%= f.label :current_password, required: true, label: "Current Password" %>
      <%= f.input :current_password, label: false, :error => false %><br />
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Update", class: "btn-primary" %>
    </div>

  <% end %>

  <br />

  <h3>Cancel my account</h3>

  <p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn-outline-danger" %></p>

  <br />

  <%= link_to "Back", :back, class: "btn-outline-primary" %>

</div>
