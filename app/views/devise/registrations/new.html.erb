<div class="container-fluid">

  <h2>Sign up</h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

    <%= devise_error_messages! %>

    <div class="form-inputs">
      <%= f.label :email, required: true %>
      <%= f.input :email, label: false, autofocus: true, :error => false %><br />

      <%= f.label :name, required: true %>
      <%= f.input :name, label: false, :error => false %><br />

      <%= f.label :password, required: true %>
      <%= f.input :password, label: false, :error => false %><br />

      <%= f.label :password_confirmation, required: true %>
      <%= f.input :password_confirmation, label: false, :error => false %><br />
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Sign up", class: "btn-primary" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>

</div>
