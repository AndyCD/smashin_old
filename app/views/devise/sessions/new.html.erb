<div class="container-fluid">

  <h2>Sign in</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.label :email, required: true %>
      <%= f.input :email, label: false, autofocus: true, :error => false %><br />

      <%= f.label :password, required: true %>
      <%= f.input :password, label: false, :error => false %><br />

      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %><br />
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Sign in", class: "btn-primary" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>

</div>
